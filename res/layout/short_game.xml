<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonQuit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="gameOverScreen"
            android:text="@string/back"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/opponentName"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
           		android:visibility="invisible"/>

            <TextView
                android:id="@+id/gameStatus"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Waiting for opponent" 
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/topWord"
        android:layout_width="fill_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="" 
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/centerWord"
        android:layout_width="fill_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text=""
        android:textSize="50sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/bottomWord"
        android:layout_width="fill_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="" 
        android:textSize="40sp"
        android:visibility="invisible"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center">

        <Button
            android:id="@+id/buildButton"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/build"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/challengeButton"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/challenge"
            android:visibility="invisible"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scrollbars="none" 
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <ImageButton
                android:id="@+id/buttonA"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/a"
                android:contentDescription="@string/letterA"
                android:background="@null"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/buttonB"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:src="@drawable/b"
                android:contentDescription="@string/letterB"
                android:background="@null"
            	android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/buttonC"
				android:layout_weight="1"
